
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<body>
<header>
    <div>
        <ul class="nav justify-content-center bg-light navbar-light">
            <li class="nav-item">
                <a href="~/Home/Index" class="nav-link">Главная</a>
            </li>
            <li class="nav-item">
                <a href="~/DataBases/DataBases" asp-controller="DataBase" asp-action="DataBases" class="nav-link">Базы данных</a>
            </li>
            <li class="nav-item">
                <a href="~/KeywordSearch/KeywordSearch" class="nav-link">Ключевые слова</a>
            </li>
        </ul>
    </div>
</header>
<div class="container body-content">
    @RenderBody()
    <hr/>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
<footer class="border-top footer text-muted" style="
                                                    bottom: 0;
                                                    width: 100%;
                                                    height: 60px;
                                                    line-height: 60px;
                                                    background-color: #f5f5f5;">
    <div class="container">
        <span class="text-muted">footer</span>
    </div>
</footer>

</html>